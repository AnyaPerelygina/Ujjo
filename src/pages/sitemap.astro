---
import Layout from '@layouts/root/root'
import Container from '@components/Container/Container'
import Title from '@ui/Title/Title'
import Picture from '@ui/Picture/Picture'

const pageList = [
  {
    name: 'Main page Ujjo',
    href: 'index.html'
  }
]
---

<Layout title="List of pages">
  <main>
    <div class="sitemap">
      <Container mod="big">
        <div class="sitemap__logo">
          <Picture name="text-ujjo-small" alt="" width={656} type="svg" />
        </div>
        <Title text="List of pages:" size="sm" />
        <ol>
          {
            pageList.map((item) => (
              <li>
                <a href={item.href}>{item.name}</a>
              </li>
            ))
          }
        </ol>
      </Container>
    </div>
  </main>
</Layout>

<style lang="scss">
  .sitemap {
    width: 100%;
    height: 100%;
    min-height: 100vh;

    padding: 50px;

    background-color: var(--color-lavender);

    &__logo {
      max-width: 199px;
      margin-bottom: 30px;

      svg {
        max-width: 199px;
      }
    }

    ol {
      margin-top: 20px;
      padding-left: 20px;
      list-style: decimal;

      li {
        &:not(:last-child) {
          margin-bottom: 16px;
        }

        a {
          font-size: 18px;
        }
      }
    }
  }
</style>
