---
import Layout from '@layouts/root/root'
import Container from '@components/Container/Container'
import Title from '@ui/Title/Title'
import { Icon } from 'astro-icon/components'

const pageList = [
  {
    name: 'Ujjo - hot sauce for coffee',
    href: 'index.html'
  }
]
---

<Layout title="Список страниц">
  <main>
    <div class="sitemap">
      <Container mod="big">
        <div class="sitemap__logo">
          <Icon name="logo" />
        </div>
        <Title text="Список страниц" size="sm" />
        <ol>
          {
            pageList.map((item) => (
              <li>
                <a href={item.href}>{item.name}</a>
              </li>
            ))
          }
        </ol>
      </Container>
    </div>
  </main>
</Layout>

<style lang="scss">
  .sitemap {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    padding-top: size(30);

    background-color: var(--color-lavender);

    &__logo {
      margin-bottom: size(30);

      width: 100%;
      max-width: size(300);
      height: size(80);

      img {
        object-fit: contain;
        width: auto;
        height: 100%;
      }
    }

    ol {
      margin-top: size(20);
      padding-left: size(20);
      list-style: decimal;

      li {
        &:not(:last-child) {
          margin-bottom: size(16);
        }

        a {
          font-size: size(18);
          color: var(--color-fedora);
        }
      }
    }
  }
</style>
